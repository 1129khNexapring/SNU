                <Cell col="3" text="noticeWriter"/>
              </Band>
              <Band id="body">
                <Cell text="bind:noticeNo"/>
                <Cell col="1" text="bind:noticeTitle"/>
                <Cell col="2" text="bind:noticeDate"/>
