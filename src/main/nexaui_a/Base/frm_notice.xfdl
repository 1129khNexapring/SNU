        <Button id="Button00" taborder="1" text="Button00" left="657" top="57" width="146" height="47" onclick="Button00_onclick"/>
        <Grid id="Grid00" taborder="2" left="71" top="47" width="550" height="267" binddataset="ds_notice" autofittype="col" scrolltype="none" fillareatype="none" autosizingtype="col">
          <Formats>
            <Format id="default">
              <Columns>
                <Column size="80"/>
                <Column size="80"/>
                <Column size="80"/>
                <Column size="80"/>
              </Columns>
              <Rows>
                <Row size="24" band="head"/>
                <Row size="24"/>
              </Rows>
              <Band id="head">
                <Cell text="noticeNo"/>
                <Cell col="1" text="noticeTitle"/>
