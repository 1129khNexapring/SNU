<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="DepartmentMapper">
	<resultMap id="departmentResultMap" type="Department">
		<id column="D_CODE" property="dCode"/>
		<result column="D_NAME" property="dName"/>
		<result column="D_FIELD" property="dField"/>
		<result column="OFFICE_CODE" property="officeName"/>
		<result column="TUITION_FEE" property="tuitionFee"/>
		<result column="D_CAPACITY" property="dCapacity"/>
	</resultMap>

	<select id="selectDeptByCode" resultMap="departmentResultMap" parameterType="string">
		SELECT * FROM DEPARTMENT WHERE D_CODE = #{dCode } 
	</select>

	<select id="selectDeptBypCode" resultMap="departmentResultMap" parameterType="string">
	SELECT D_CODE, D_NAME, D_FIELD, OFFICE_CODE, TUITION_FEE, D_CAPACITY FROM DEPARTMENTJOIN PROFESSOR USING(D_CODE)WHERE P_CODE = #{profCode } 
	</select>

</mapper>